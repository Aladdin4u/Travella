<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header') %>
<body class="font-sans flex flex-col justify-center items-center">
  <%- include('./partials/nav') %>

  
    <!-- Hotels list -->

    <div class="mt-16 flex flex-col md:flex-row w-full">
        <div class="w-full bg-blue-400 md:w-2/3 p-16 ">

            <div class="flex flex-col mx-auto lg:flex-row bg-white lg:p-8 shadow-xl rounded-lg overflow-hidden">
                    <div class="lg:mr-4 shrink-0 ">
                        <img src="/images/ballon.jpg" alt="img" class="overflow:hidden object-cover w-full lg:w-52 h-56 rounded-t-xl lg:rounded-lg">
                    </div>
                    <div class="flex flex-col justify-between">
                        <div class="p-8 lg:p-0">
                            <div class="flex justify-between">
                                <p class="text-sm mt-2 capitalize font-bold"><%= hotel.name %></p>
                                <p class="text-sm text-gray-400"><%= hotel.rating %> Review</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-400"><%= hotel.address %></p>
                                <p class="text-sm mt-2 "><%= hotel.distance %> miles</p>
                                <p class="text-gray-600"><span class="text-red-500 text-2xl font-bold">$<%= hotel.cheapestPrice %></span> / per person</p>
                            </div>
                        </div>
                        <div class="flex flex-col">
                            <p class="text-gray-400 mt-2 lg:mt-4 text-sm"><%= hotel.desc %></p>
                        </div>
                    </div>
                    
            </div>
        </div>
        <div class=" md:w-1/3 p-8 bg-gray-300 pt-16 w-full">

            <div class="flex flex-row bg-white p-8 shadow-xl rounded-lg">
                <div class="text-gray-900 w-full">
                    <button class="capitalize mt-2 lg:mt-4 border p-4 rounded-lg text-gray-900"><a href="#">booknow</a></button>
                </div>
            </div>
        
        </div>
    </div>

    <%- include('./partials/footer') %>
</body>
</html>